{
    "manifest_version": 2,

    "name": "Resize extension",
    "description": "Extension which resizes window to selected width and height",
    "version": "0.1",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Click to show options"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}